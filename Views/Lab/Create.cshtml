@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1>Criar elemento</h1>
    <p class="center" style="margin-bottom: 45px;">Crie um elemento novo:</p>
    <form asp-controller="Lab" asp-action="Creating" method="post">
        <table style="margin-left:500px;">
            <tr>
                <th><label for="id">Id:</label></th>
                <th><input type="text" name="id" id="Id"></th>
            </tr>
            <tr>
                <th><label for="number">Number:</label></th>
                <th><input type="text" name="number" id="Number"></th>
            </tr>
            <tr>
                <th><label for="name">Name:</label></th>
                <th><input type="text" name="name" id="Name"></th>
            </tr>
            <tr>
                <th><label for="sector">Sector:</label></th>
                <th><input type="text" name="sector" id="Sector"></th>
            </tr>
        </table>
        <input style="margin-top:20px" type="submit" value="Enviar">
    </form>
</div>