@model IEnumerable<MvcLabManager.Models.Lab>;

@{
    ViewData["Title"] = "Laboratórios";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0) {
    <p>Nenhum computador cadastrado.</p>
} else {
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Number</th>
                <th>Sector</th>
                <th>Ações:</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var lab in Model)
            {
                <tr>
                    <td>@lab.Id</td>
                    <td>@lab.Name</td>
                    <td>@lab.Number</td>
                    <td>@lab.Sector</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-controller="Lab"
                        asp-action="Show" 
                        asp-route-id="@lab.Id">Ver</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Lab"
                        asp-action="Delete" 
                        asp-route-id="@lab.Id">Del</a>
                        <a class="btn btn-warning btn-sm" asp-controller="Lab"
                        asp-action="Update" 
                        asp-route-id="@lab.Id">Upd</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary btn-sm" style="width: 100%;" href="/Lab/Criar">Create</a>
}